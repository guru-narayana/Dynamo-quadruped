<launch>
  <param name="robot_description" textfile="$(find spot_micro_rviz)/urdf/spot_micro.urdf" />
  <rosparam file="$(find spot_micro_rviz)/config/config.yaml" command="load"/>


  <arg name="paused" default="false"/>
  <arg name="use_sim_time" default="true"/>
  <arg name="gui" default="true"/>
  <arg name="headless" default="false"/>
  <arg name="debug" default="false"/>

  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find spot_micro_rviz)/worlds/empty.world"/>
    <arg name="debug" value="$(arg debug)" />
    <arg name="gui" value="$(arg gui)" />
    <arg name="paused" value="true"/>
    <arg name="use_sim_time" value="$(arg use_sim_time)"/>
    <arg name="headless" value="$(arg headless)"/>
  </include>

  <node
    name="spawn_model"
    pkg="gazebo_ros"
    type="spawn_model"
    args="-file $(find spot_micro_rviz)/urdf/spot_micro.urdf -urdf -model dynamo_sim 
    -J front_left_leg -1.01
    -J front_left_foot 1.78
    -J rear_left_leg -1.01
    -J rear_left_foot 1.78
    -J front_right_leg -1.01
    -J front_right_foot 1.78
    -J rear_right_leg -1.01
    -J rear_right_foot 1.78
    -z 0.25"
    output="screen" />
  <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false"
    output="screen" ns="/dynamo" args="
    LFJ1_position_controller 
    LFJ2_position_controller
    LFJ3_position_controller
    LBJ1_position_controller 
    LBJ2_position_controller
    LBJ3_position_controller
    RFJ1_position_controller 
    RFJ2_position_controller
    RFJ3_position_controller
    RBJ1_position_controller 
    RBJ2_position_controller
    RBJ3_position_controller 
    joint_state_controller"/>

  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"
    respawn="false" output="screen">
    <remap from="/joint_states" to="/dynamo/joint_states" />
  </node>

</launch>